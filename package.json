{
  "name": "@philosophocat/postgres-migrations",
  "version": "0.1.2",
  "description": "Simple migrations for postgres.js",
  "type": "module",
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsup src/index.ts --format esm,cjs --dts",
    "dev": "tsup --watch",
    "lint": "tsc --noEmit",
    "test": "vitest run",
    "prepublishOnly": "npm run build"
  },
  "keywords": [
    "postgres",
    "migrations",
    "typescript"
  ],
  "peerDependencies": {
    "postgres": "^3.0.0"
  },
  "devDependencies": {
    "@types/node": "^22.0.0",
    "postgres": "^3.4.8",
    "tsup": "^8.0.0",
    "typescript": "^5.0.0",
    "vitest": "^4.0.17"
  },
  "sideEffects": false,
  "author": "Viacheslav Sergeev <philosophocat@gmail.com>",
  "license": "ISC",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/philosophocat/postgres-migrations.git"
  }
}